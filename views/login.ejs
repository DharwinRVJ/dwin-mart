<%- include('layouts/header.ejs') %>
<h4 class="text-center"><%= title %></h4>
<form method="POST" action="/users/login" id="frm-login" autocomplete="off">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="name">UserName</label>
            <input required style="background-color: rgba(247, 171, 8, 0.829)" type="text" class="form-control"
                name="username" id="username" placeholder="User Name" />
        </div>
        <div class="form-group col-md-6">
            <label for="password">Password</label>
            <input required style="background-color: rgba(247, 171, 8, 0.829)" type="password" class="form-control"
                name="password" id="password" placeholder="Password" />
            <small id="help" class="form-text text-muted">New User ?<a href="/users/register">
                    <img src="https://img.icons8.com/nolan/20/add-user-male.png" />Register </a>here.</small>
        </div>
    </div>
    <div class="form-row justify-content-center">
        <button type="submit" style="background-color: rgba(247, 171, 8, 0.829)" class="btn">
            LogIn
        </button>
    </div>
</form>
<script>
    $(function () {
        $('#frm-login').validate({})
    })
</script>
<%- include('layouts/footer.ejs') %>